  <div id="chatPopupHeader">
    Guide MusÃ©e
    <button onclick="toggleChat()">âœ–</button>
  </div>
  <div id="chatMessages"></div>
  <form id="chatForm" onsubmit="sendChat(event)">
    <input type="text" id="chatInput" placeholder="Posez votre question..." required />
